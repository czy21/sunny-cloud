<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunny.cloud.system.core.mapper.DictMapper">
    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.sunny.cloud.system.core.model.po.DictPO" useGeneratedKeys="true">
        insert into sys_dict
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="code != null">code,</if>
                <if test="name != null">name,</if>
                <if test="desc != null">desc,</if>
                <if test="valueType != null">value_type,</if>
                <if test="createTime != null">create_time,</if>
                <if test="createUser != null">create_user,</if>
                <if test="updateTime != null">update_time,</if>
                <if test="updateUser != null">update_user,</if>
                <if test="deleted != null">deleted,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="code != null">#{code,jdbcType=VARCHAR},</if>
                <if test="name != null">#{name,jdbcType=VARCHAR},</if>
                <if test="desc != null">#{desc,jdbcType=VARCHAR},</if>
                <if test="valueType != null">#{valueType,jdbcType=TINYINT},</if>
                <if test="createTime != null">#{createTime,jdbcType=TIMESTAMP},</if>
                <if test="createUser != null">#{createUser,jdbcType=VARCHAR},</if>
                <if test="updateTime != null">#{updateTime,jdbcType=TIMESTAMP},</if>
                <if test="updateUser != null">#{updateUser,jdbcType=VARCHAR},</if>
                <if test="deleted != null">#{deleted,jdbcType=BIT},</if>
        </trim>
    </insert>
    <update id="update" parameterType="com.sunny.cloud.system.core.model.po.DictPO">
        update sys_dict
        <set>
                <if test="code != null">
                    code = #{code,jdbcType=VARCHAR},
                </if>
                <if test="name != null">
                    name = #{name,jdbcType=VARCHAR},
                </if>
                <if test="desc != null">
                    desc = #{desc,jdbcType=VARCHAR},
                </if>
                <if test="valueType != null">
                    value_type = #{valueType,jdbcType=TINYINT},
                </if>
                <if test="createTime != null">
                    create_time = #{createTime,jdbcType=TIMESTAMP},
                </if>
                <if test="createUser != null">
                    create_user = #{createUser,jdbcType=VARCHAR},
                </if>
                <if test="updateTime != null">
                    update_time = #{updateTime,jdbcType=TIMESTAMP},
                </if>
                <if test="updateUser != null">
                    update_user = #{updateUser,jdbcType=VARCHAR},
                </if>
                <if test="deleted != null">
                    deleted = #{deleted,jdbcType=BIT},
                </if>
        </set>
        where   id = #{id,jdbcType=BIGINT} 
    </update>

    <resultMap id="DictValueMap" type="com.sunny.cloud.system.api.model.DictDTO">
        <result column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="desc" property="desc"/>
        <result column="value_type" property="valueType"/>
        <collection column="dict_id" property="values" ofType="com.sunny.cloud.system.api.model.DictValueDTO">
            <result column="value_id" property="id"/>
            <result column="value_name" property="name"/>
            <result column="value_sort" property="sort"/>
            <result column="value" property="value"/>
        </collection>
    </resultMap>
    <sql id="BASE_SELECT_SQL">
        select
            d.*,
            dv.id as value_id,
            dv.name as value_name,
            dv.sort as value_sort,
            dv.value as value
        from dict d
            inner join dict_value dv on dv.dict_id = d.id
    </sql>
    <select id="selectListByCodes" resultMap="DictValueMap">
        <include refid="BASE_SELECT_SQL"/>
        where
        d.code in
        <foreach collection="codes" open="(" close=")" separator="," item="t">
            #{t}
        </foreach>
    </select>
    <select id="selectOneByCode" resultMap="DictValueMap">
        <include refid="BASE_SELECT_SQL"/>
        where d.code = #{code}
    </select>
</mapper>
